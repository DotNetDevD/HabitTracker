@model Habit

@{
    ViewData["Title"] = "Create";
}

<form method="post" style="background-color:white" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Habit</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Name" class="form-control form-control-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="WeeklyGoal"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="WeeklyGoal" class="form-control form-control-sm" />
                        <span asp-validation-for="WeeklyGoal" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 mb-3">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Description" class="form-control form-control-sm" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100 btn-sm" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100 btn-sm">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i> Return to Habits List</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
